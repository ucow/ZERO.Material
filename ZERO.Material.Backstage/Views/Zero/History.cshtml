@model List<ZERO.Material.Model.Material_Apply>
@{
    ViewBag.Title = "我的申请";
    Layout = "~/Views/Shared/BeforeLayout.cshtml";
}
<style>
    .table tbody tr td {
        text-align: center;
        vertical-align: middle
    }
</style>
<div class="container" style="padding: 10px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                未审核
            </h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead style="text-align: center">
                    <tr>
                        <td></td>
                        <td>名称</td>
                        <td>申请时间</td>
                        <td>使用时间</td>
                        <td>归还时间</td>
                        <td>使用系别</td>
                        <td>使用专业</td>
                        <td>申请数量</td>
                        <td>购买数量</td>
                    </tr>
                </thead>
                <tbody style="text-align: center; vertical-align: middle">

                    @foreach (var key in Model.Where(m => m.Head_Aduit == 0))
                    {

                        <tr>
                            <td>
                                <img src="@Url.Action("GetImage",new {@id=key.Material_Id})" width="100" height="100" />
                            </td>
                            <td>
                                <strong>@key.Material_Name</strong>
                            </td>
                            <td>
                                <strong>@key.Apply_Time.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <strong>@key.Start_Time.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <strong>@key.End_Time.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <strong>@key.Teach_Depart</strong>
                            </td>
                            <td>
                                <strong>@key.Teach_Field</strong>
                            </td>
                            <td>
                                <strong>@key.Apply_Count</strong>
                            </td>
                            <td>
                                <strong>@key.Needbuy_Count</strong>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                已通过
            </h3>
        </div>
        <div class="panel-body">
            <table class="table">
                <thead style="text-align: center">
                    <tr>
                        <td></td>
                        <td>名称</td>
                        <td>申请时间</td>
                        <td>使用时间</td>
                        <td>归还时间</td>
                        <td>使用系别</td>
                        <td>使用专业</td>
                        <td>申请数量</td>
                        <td>购买数量</td>
                        <td>审批意见</td>
                    </tr>
                </thead>
                <tbody style="text-align: center; vertical-align: middle">

                    @foreach (var key in Model.Where(m => m.Head_Aduit == 1))
                    {

                        <tr>
                            <td>
                                <img src="@Url.Action("GetImage",new {@id=key.Material_Id})" width="100" height="100" />
                            </td>
                            <td>
                                <strong>@key.Material_Name</strong>
                            </td>
                            <td>
                                <strong>@key.Apply_Time.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <strong>@key.Start_Time.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <strong>@key.End_Time.ToString("yyyy-MM-dd")</strong>
                            </td>
                            <td>
                                <strong>@key.Teach_Depart</strong>
                            </td>
                            <td>
                                <strong>@key.Teach_Field</strong>
                            </td>
                            <td>
                                <strong>@key.Apply_Count</strong>
                            </td>
                            <td>
                                <strong>@key.Needbuy_Count</strong>
                            </td>
                            <td>
                                <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@key.Id">查看意见</button>
                                <div class="modal fade" id="@key.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">审批意见</h4>
                                            </div>
                                            <div class="modal-body">@key.Head_Advice</div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                                            </div>
                                        </div><!-- /.modal-content -->
                                    </div><!-- /.modal -->
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
