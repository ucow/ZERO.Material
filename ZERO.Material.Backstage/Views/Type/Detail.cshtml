@model ZERO.Material.Model.Material_Type

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
    @Styles.Render("~/Content/layui")
    @Scripts.Render("~/bundles/layui")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <style>
        table tbody tr td:first-child {
            width: 20%
        }
    </style>
</head>
<body>
    <div class="layui-card">
        <div class="layui-card-header">@Html.LabelFor(m => m.Material_Type_Name)</div>
        <div class="layui-card-body">
            <table class="layui-table" lay-skin="nob">
                <tbody>
                    <tr>
                        <td>@Html.LabelFor(m => m.Material_Type_Id)</td>
                        <td>@Model.Material_Type_Id</td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(m => m.Material_Type_Name)</td>
                        <td>@Model.Material_Type_Name</td>
                    </tr>

                    <tr>
                        <td>@Html.LabelFor(m => m.Material_Type_Remark)</td>
                        <td>@Model.Material_Type_Remark</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>